{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist/main",
    "rootDir": "src",
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/**/*.test.ts",
  ]
}
